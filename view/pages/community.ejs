                </div>
            </form>
            <br><br>
            <%
            if (post) {
                console.log(post)
                var card = '';
                post.forEach(function(item){
                    var time =item.time
                    var cardid = item.postid
                    card += '<div class="card" id="'+cardid+'"><div class=\'row\'><div class=\'col-11\'><div class="card-body">' +
